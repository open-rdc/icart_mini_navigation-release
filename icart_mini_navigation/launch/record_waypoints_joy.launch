<?xml version="1.0"?>

<launch>
  <arg name="joy_config" default="elecom_joy"/>
  <arg name="joy_dev" default="/dev/input/js0"/>
  <arg name="map_file" default="$(find icart_mini_navigation)/maps/mymap.yaml"/>
  <arg name="filename" default="$(find icart_mini_navigation)/waypoints_cfg/waypoints.yaml"/>
  <arg name="save_joy_button" default="0"/>
  
  <include file="$(find icart_mini_driver)/launch/teleop_joy.launch">
    <arg name="joy_config" value="$(arg joy_config)"/>
    <arg name="joy_dev" value="$(arg joy_dev)"/>
  </include>

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
  <node name="waypoints_saver" pkg="waypoints_navigation" type="waypoints_saver" output="screen">
    <param name="save_joy_button" value="$(arg save_joy_button)"/>
    <param name="filename" value="$(arg filename)"/> 
    <remap from="waypoints_joy" to="joy"/>
    <remap from="waypoints_viz" to="clicked_point"/>
    <remap from="finish_pose" to="move_base_simple/goal"/>
  </node>

  <include file="$(find icart_mini_navigation)/launch/localization.launch"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find icart_mini_navigation)/rviz_cfg/nav.rviz"/>
</launch>
